<UserControl 
  x:Class="Merbla.Kinecting.WPF.Controls.Controls.FrontSideControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:jas="clr-namespace:Merbla.Kinecting.WPF.Controls">
  <Border 
    Background="BurlyWood"
    BorderBrush="Gray" 
    BorderThickness="3" 
    CornerRadius="6" 
    Width="200" Height="200"
    >
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="150" />
        <RowDefinition Height="50" />
      </Grid.RowDefinitions>
      <TextBlock 
        FontWeight="Bold"
        Foreground="White"
        HorizontalAlignment="Center"
        Text="This is the front side"  
        VerticalAlignment="Center"  
        />
      <Button 
        Grid.Row="1"
        Command="jas:ContentControl3D.RotateCommand"
        Content="Flip Over"   
        HorizontalAlignment="Right" 
        Margin="4"
        MaxHeight="25"
        />
    </Grid>
  </Border>
</UserControl>