<UserControl x:Class="Merbla.Kinecting.WPF.Controls.Controls.MemoryButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Merbla.Kinecting.WPF.Controls" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <controls:ContentControl3D>
            <controls:ContentControl3D.BackContentTemplate>
                <DataTemplate>
                    <Button Content="Go Back" Command="controls:ContentControl3D.RotateCommand" />
                </DataTemplate>
            </controls:ContentControl3D.BackContentTemplate>
            <Button Content="Test" Command="controls:ContentControl3D.RotateCommand" />
        </controls:ContentControl3D>


    </StackPanel>
</UserControl>
