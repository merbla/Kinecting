                    </DataTemplate>
                </controls:ContentControl3D.BackContentTemplate>
                <Button x:Name="OpenTile4" Content="{Binding MemoryGame.Tile4.Value.Text}" Style="{StaticResource MemoryButtonStyle}" />
            </controls:ContentControl3D> 
        
        </StackPanel>
